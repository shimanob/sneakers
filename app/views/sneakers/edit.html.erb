<<section class="hero is-success">
<div class="hero-body">
  <div class="container">
    <h1 class="title">
      投稿編集
    </h1>
  </div>
</div>
</section>

<% if @sneaker.errors.any? %>
<div class="notification is-danger">
  <h2><%= pluralize(@sneaker.errors.count, "error") %> prohibited this object from being saved: not successfully</h2>
  <ul>
    <% @sneaker.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_for @sneaker do |f| %>
          <div class="field">
            <%= f.label :title, " スニーカー名", class: "label" %>
            <%= f.text_field :title, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :body, "特徴", class: "label" %>
            <%= f.text_area :body, class: "textarea" %>
          </div>

          <div class="field">
            <%= f.label :image, "写真", class: "label" %>
            <%= f.attachment_field :image, class: "input" %>
          </div>

          <%= f.submit '更新', class: "button is-success" %>
        <% end %>
      </div>
    </div>
  </div>
</section>